{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src", "tests"],
  "forceConsistentCasingInFileNames": true,
  "noImplicitOverride": true,
  "noFallthroughCasesInSwitch": true,
  "importsNotUsedAsValues": "error"
}
