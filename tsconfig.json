{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,

    // Strictness
    "strict": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    // Import behavior
    "importsNotUsedAsValues": "error"
  },
  "include": ["src"]
}
